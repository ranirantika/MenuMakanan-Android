<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FAEDC6"
    android:theme="@style/AppTheme.NoActionBar"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="330dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@drawable/mielidi" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:backgroundTint="#CA965C"
                android:background="@drawable/background"
                android:layout_marginTop="16dp"
                android:layout_gravity="center"
                android:layout_marginBottom="8dp"
                android:text="Mie Lidi"
                android:textStyle="bold"
                android:textSize="32sp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_width="350dp"/>

<!--            <TextView-->
<!--                android:id="@+id/textView7"-->
<!--                android:textStyle="italic"-->
<!--                android:paddingLeft="20dp"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:text="untuk 6 porsi" />-->
        </FrameLayout>

        <TextView
            android:layout_marginLeft="20dp"
            android:id="@+id/textView2"
            android:gravity="center"
            android:layout_width="match_parent"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:text="Berat : 250 gram " />

        <TextView
            android:layout_marginLeft="20dp"
            android:id="@+id/textView8"
            android:gravity="center"
            android:layout_width="match_parent"
            android:textSize="16sp"
            android:textStyle="italic"
            android:layout_height="wrap_content"
            android:text="Harga : Rp 25.000,-" />

        <TextView
            android:layout_marginLeft="20dp"
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:text="Varian rasa:" />
        <TextView
            android:paddingTop="10dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1. Pedas Asin
            \n\n2. Original \n\n"></TextView>

        <TextView
            android:layout_marginLeft="20dp"
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:text="Notes :" />

        <TextView
            android:paddingTop="10dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Untuk pemesanan dan pilihan menu lainnya silahkan klik tombol menu pada beranda dan pilih makanan ringan lainnya atau kontak pemesanan"></TextView>



        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:gravity="center"/>
            <TableRow
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="match_parent" >
                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cirebon, Jawa Barat - Indonesia" />

            </TableRow>

    </LinearLayout>


</ScrollView>