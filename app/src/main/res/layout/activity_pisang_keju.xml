<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFD365"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="310dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@drawable/kripca" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginTop="16dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginBottom="8dp"
                android:text="Kripik Kaca"
                android:textStyle="bold"
                android:textSize="32sp"
                android:background="@drawable/background"
                android:backgroundTint="#CA965C"
                android:layout_height="wrap_content"
                android:layout_width="350dp"/>

<!--            <TextView-->
<!--                android:id="@+id/textView7"-->
<!--                android:paddingLeft="20dp"-->
<!--                android:textStyle="italic"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:text="untuk 10 porsi" />-->
        </FrameLayout>

        <TextView
            android:layout_marginLeft="20dp"
            android:id="@+id/textView2"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Berat : 250 gram " />

        <TextView
            android:layout_marginLeft="20dp"
            android:id="@+id/textView5"
            android:textStyle="italic"
            android:gravity="center"
            android:textSize="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Harga : Rp. 25.000,- \n" />

        <TextView
            android:layout_marginLeft="20dp"
            android:id="@+id/textView6"
            android:textStyle="bold"
            android:textSize="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Varian Rasa : " />

        <TextView
            android:paddingTop="10dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1. Asin Pedas
                            \n\n 2. Asin \n\n 3. Balado \n"  />

        <TextView
            android:layout_marginLeft="20dp"
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:text="Notes :" />

        <TextView
            android:paddingTop="10dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Untuk pemesanan dan pilihan menu lainnya silahkan klik tombol menu pada beranda dan pilih makanan ringan lainnya atau kontak pemesanan"></TextView>





        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:gravity="center"/>
        <TableRow
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="match_parent" >
            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cirebon, Jawa Barat - Indonesia" />

        </TableRow>

    </LinearLayout>


</ScrollView>